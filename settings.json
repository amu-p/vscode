{
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.surround": true,
  "vim.insertModeKeyBindings": [
    { "before": ["<C-h>"], "after": ["<Left>"] },
    { "before": ["<C-j>"], "after": ["<Down>"] },
    { "before": ["<C-k>"], "after": ["<Up>"] },
    { "before": ["<C-l>"], "after": ["<Right>"] },
    { "before": ["j", "j"], "after": ["<Esc>"], "commands": [":w"] }
  ],
  "vim.normalModeKeyBindings": [
    { "before": ["<C-c>"], "after": ["<C-w>", "<C-c>"] },
    { "before": ["<C-n>"], "commands": [":tabnext"] },
    { "before": ["<C-m>"], "commands": [":tabprev"] },
    { "before": ["<Esc>", "<Esc>"], "commands": [":noh"] }
  ],

  "git.autofetch": true,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.wordWrap": "off",
  "editor.tabSize": 3
}